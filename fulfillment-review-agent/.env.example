# Server Configuration
PORT=3003
HOST=localhost
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/divination-fulfillment
MONGODB_DB_NAME=divination-fulfillment

# Email Configuration (for digital product delivery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@ether-ai.com

# Logistics APIs
# 顺丰速运
SF_EXPRESS_API_KEY=your_sf_api_key
SF_EXPRESS_API_SECRET=your_sf_secret

# EMS
EMS_API_KEY=your_ems_api_key

# 圆通速递
YTO_API_KEY=your_yto_api_key

# 中通快递
ZTO_API_KEY=your_zto_api_key

# 申通快递
STO_API_KEY=your_sto_api_key

# FedEx
FEDEX_API_KEY=your_fedex_api_key
FEDEX_API_SECRET=your_fedex_secret

# UPS
UPS_API_KEY=your_ups_api_key

# DHL
DHL_API_KEY=your_dhl_api_key

# Botpress
BOTPRESS_API_URL=https://api.botpress.cloud
BOTPRESS_BOT_ID=your_bot_id
BOTPRESS_TOKEN=your_bot_token

# Transaction Agent (for order updates)
TRANSACTION_AGENT_URL=http://localhost:3002
TRANSACTION_AGENT_API_KEY=your_transaction_api_key

# Merchant Notification
MERCHANT_EMAIL=merchant@example.com

# Digital Product Storage
DIGITAL_PRODUCT_STORAGE_PATH=./storage/digital-products
DOWNLOAD_LINK_EXPIRY_DAYS=7

# Review Rewards
ENABLE_REVIEW_REWARDS=true
REVIEW_REWARD_POINTS=10
REVIEW_WITH_IMAGE_BONUS=5

# Sharing URLs
SHARING_BASE_URL=https://ether-ai.com/share
