  "description": "Ether AI Assistant - 对话与导购智能体 based on Botpress",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "deploy": "bp deploy",
    "deploy:public": "bp deploy --public",
    "test": "jest",
    "test:dream": "jest --testPathPattern=dream",
    "test:tarot": "jest --testPathPattern=tarot",
    "chat": "bp chat",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "botpress",
    "chatbot",
    "divination",
    "ai-assistant",
    "recommendation",
    "multimodal"
  ],
  "author": "Ether AI Team",
  "license": "MIT",
  "dependencies": {
    "@botpress/client": "^0.3.0",
    "@botpress/sdk": "^0.3.0",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@botpress/cli": "^0.3.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
